<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    android:background="#fff">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_round_sky">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/merchantname"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <TextView
                    android:id="@+id/tv_merchantname"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_round_sky"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="商户号"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <TextView
                    android:id="@+id/tv_merchantnum"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_round_sky"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="佣金"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <EditText
                    android:id="@+id/et_commision"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="主页图"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <ImageView
                    android:id="@+id/iv_main_image"
                    android:layout_height="120dp"
                    android:layout_width="90dp"
                    android:layout_marginLeft="10dp"
                    android:background="#000"
                    android:padding="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_add"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/btn_round_selector"
                android:text="修改"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_black"
                android:layout_marginTop="20dp"
                android:padding="10dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>