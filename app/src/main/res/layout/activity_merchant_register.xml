<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="12dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_height="20dp"
            android:layout_width="12dp"
            android:src="@drawable/btn_back"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:text="商户注册"/>
    </RelativeLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/color_border"/>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/color_background"
        android:scrollbars="none">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="@string/merchantname"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <EditText
                    android:id="@+id/et_merchantname"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:hint="请输入商户名"
                    android:textColorHint="@color/hint_gray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="@string/merchantaddress"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <EditText
                    android:id="@+id/et_merchantaddress"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_black"
                    android:hint="请输入商户地址"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="@string/business_licence"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <ImageView
                    android:id="@+id/iv_business_licence"
                    android:layout_height="105dp"
                    android:layout_width="153dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/img_licence_default"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="@string/legal_personalid"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <ImageView
                    android:id="@+id/iv_legal_persionalid"
                    android:layout_height="105dp"
                    android:layout_width="153dp"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/img_personalid_default"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_register"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/btn_selector"
                android:text="提交"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:padding="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>