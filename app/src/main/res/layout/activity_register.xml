<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="12dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_height="20dp"
            android:layout_width="12dp"
            android:src="@drawable/btn_back"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:text="注册"/>
    </RelativeLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/color_border"/>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/color_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/username"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <EditText
                    android:id="@+id/et_username"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/hint_gray"
                    android:hint="请输入您的用户名"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/password"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:hint="请输入您的密码"
                    android:textColorHint="@color/hint_gray"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/realname"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <EditText
                    android:id="@+id/et_realname"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/hint_gray"
                    android:hint="请输入您的真实姓名"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/sex"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <RadioGroup
                    android:id="@+id/rg_sex"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/rb_male">
                    <RadioButton
                        android:id="@id/rb_male"
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:text="男"
                        android:textColor="@color/text_gray"
                        android:background="@drawable/radiobutton_selector"
                        android:button="@null"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/normal_text_size"/>

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:text="女"
                        android:textColor="@color/text_gray"
                        android:background="@drawable/radiobutton_selector"
                        android:button="@null"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_marginLeft="20dp"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/head"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/avtar_default"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/personalid"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <EditText
                    android:id="@+id/et_personalid"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/hint_gray"
                    android:hint="请输入身份证号"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/email"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/hint_gray"
                    android:hint="请输入邮箱地址"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/roles"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <RadioGroup
                    android:id="@+id/rg_role"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/rb_role_user">
                    <RadioButton
                        android:id="@id/rb_role_user"
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:text="用户"
                        android:textColor="@color/text_gray"
                        android:background="@drawable/radiobutton_selector"
                        android:button="@null"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/normal_text_size"/>

                    <RadioButton
                        android:id="@+id/rb_role_company"
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:text="商户"
                        android:textColor="@color/text_gray"
                        android:background="@drawable/radiobutton_selector"
                        android:button="@null"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_marginLeft="20dp"/>

                    <RadioButton
                        android:id="@+id/rb_role_company_online"
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:text="电商"
                        android:textColor="@color/text_gray"
                        android:background="@drawable/radiobutton_selector"
                        android:button="@null"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_marginLeft="20dp"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/telephone"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>

                <EditText
                    android:id="@+id/et_telephone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/hint_gray"
                    android:hint="请输入手机号码"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:text="@string/vericode"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/normal_text_size"/>
                <EditText
                    android:id="@+id/et_vericode"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/hint_gray"
                    android:hint="请输入验证码"/>
                <Button
                    android:id="@+id/btn_get_vericode"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="获取验证码"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_register"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/btn_selector"
                android:text="@string/register"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:padding="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>