<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="12dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_height="20dp"
            android:layout_width="12dp"
            android:src="@drawable/btn_back"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:text="提交审核"/>
    </RelativeLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/color_border"/>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/color_background"
        android:scrollbars="none">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_commission"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:text="佣金："/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:text="请上传您的审核截图"/>
            <ImageView
                android:id="@+id/iv_timeline"
                android:layout_height="257dp"
                android:layout_width="191dp"
                android:background="@drawable/img_timeline_default"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:id="@+id/iv_elebus"
                android:layout_height="257dp"
                android:layout_width="191dp"
                android:background="@drawable/img_elebus_default"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/btn_share_submit"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:padding="10dp"
                android:text="提交审核"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>