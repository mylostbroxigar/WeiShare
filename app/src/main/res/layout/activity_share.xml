<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#fff"
            android:text="分享"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_commission"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/commen_text_style"
            android:text="佣金"
            />
        <TextView
            android:id="@+id/tv_commission"
            style="@style/commen_text_style"
            android:textColor="@color/text_red"
            android:text="5元"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <GridView
        android:id="@+id/grid_select_image"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:numColumns="4"
        android:horizontalSpacing="8px"
        android:verticalSpacing="8px"
        android:listSelector="@null"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            style="@style/commen_text_style"
            android:text="@string/comment"/>
        <EditText
            android:id="@+id/et_comment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lines="5"
            android:padding="5dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/cb_addto_share"
        style="@style/commen_text_style"
        android:text="分享到本地"
        android:layout_marginLeft="10dp"/>
    <Spinner
        android:id="@+id/spinner_dict"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/btn_selector"
        android:padding="10dp"
        android:text="分享"/>
</LinearLayout>
