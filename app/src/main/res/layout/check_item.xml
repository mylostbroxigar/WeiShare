<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:padding="10dp">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_screenshot_timeline"
            android:layout_height="84dp"
            android:layout_width="48dp"
            android:src="@drawable/img_timeline_default"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_screenshot_elebus"
            android:layout_height="84dp"
            android:layout_width="48dp"
            android:src="@drawable/img_elebus_default"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_ordernum"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_lite"
                android:textColor="@color/text_gray"
                android:text="单号："
                />
            <TextView
                android:id="@+id/tv_customername"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_lite"
                android:textColor="@color/text_gray"
                android:text="客户："
                />
            <TextView
                android:id="@+id/tv_commission"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_lite"
                android:textColor="@color/text_gray"
                android:text="佣金："
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/btn_check_pass"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="通过"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/btn_selector"/>
        <Button
            android:id="@+id/btn_check_refuse"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="拒绝"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_selector2"/>
        <TextView
            android:id="@+id/tv_check_status"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_lite"
            android:text="已通过"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>