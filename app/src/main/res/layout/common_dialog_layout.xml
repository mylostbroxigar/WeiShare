<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:background="#88b8b8b8">
	<LinearLayout
	    android:layout_width="300dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingLeft="30dp"
	    android:paddingRight="30dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:gravity="center_horizontal"
	    android:background="#fff" >
	    <TextView
	        android:id="@+id/common_tv_title"
			android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:textSize="18sp"
	        android:paddingTop="5dp"
			android:textColor="@color/text_black"
	        android:paddingBottom="5dp"/>
	    <com.dhl.epod.view.LimitHeightLayout
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content">
	    <ScrollView
	        android:id="@+id/content_scrollview"
	        android:layout_height="wrap_content"
	        android:layout_width="240dp"
	        android:background="@drawable/et_bg"
	        android:scrollbars="none">
	        <RelativeLayout
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            >
			    <TextView
		            android:id="@+id/common_tv_content"
			        android:layout_height="wrap_content"
			        android:minHeight="120dp"
			        android:layout_width="240dp"
			        android:textSize="16sp"
			        android:padding="5dp"
			        android:gravity="center"
			        android:textColor="@color/text_black"/>
		    </RelativeLayout>>
	    </ScrollView>
	    </com.dhl.epod.view.LimitHeightLayout>
	    <LinearLayout
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="15dp">
	        <Button
	            android:id="@+id/common_btn_ok"
	            android:layout_height="wrap_content"
	            android:layout_width="100dp"
	            android:padding="8dp"
	            android:background="@drawable/btn_dialog_selector"
	            android:text="@string/ok"/>
	        <Button
	            android:id="@+id/common_btn_cancle"
	            android:layout_height="wrap_content"
	            android:layout_width="100dp"
	            android:padding="8dp"
	            android:background="@drawable/btn_dialog_selector"
	            android:layout_marginLeft="15dp"
	            android:text="@string/cancle"/>
	    </LinearLayout>
	
	</LinearLayout>
</RelativeLayout>
