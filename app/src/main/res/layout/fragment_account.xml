<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:background="@drawable/bg_account"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="收益明细"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="账户余额(元)"/>

        <TextView
            android:id="@+id/tv_curr_account"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:text="0.00"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="年度总收益："/>
            <TextView
                android:id="@+id/tv_year_account"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="0.00元"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_cash"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/white"
            android:text="收益提现"
            android:background="@drawable/btn_round_trans_selector"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_bind_weixin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@color/color_border"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_height="21dp"
                android:layout_width="21dp"
                android:src="@drawable/icon_weixin"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:text="微信"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_operate_weixin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_gray"/>
            <ImageView
                android:layout_height="21dp"
                android:layout_width="12dp"
                android:src="@drawable/arrow_right"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_bind_alipay"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@color/color_border"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_height="21dp"
                android:layout_width="21dp"
                android:src="@drawable/icon_alipay"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:text="支付宝"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_operate_alipay"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_gray"/>
            <ImageView
                android:layout_height="21dp"
                android:layout_width="12dp"
                android:src="@drawable/arrow_right"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
