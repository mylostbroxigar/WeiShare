<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/iv_share_thumb"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"

            android:background="@drawable/shape_fade">
            <ImageView
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:src="@drawable/icon_distance_lite"/>
            <TextView
                android:id="@+id/tv_location"
                style="@style/discript_text_style"
                android:text="12km"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/iv_like"
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:src="@drawable/icon_thumb_lite"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_like"
                style="@style/discript_text_style"
                android:text="24"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:src="@drawable/icon_collect_lite"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_collect"
                style="@style/discript_text_style"
                android:text="30"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_share_comment"
        style="@style/content_text_style"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_height="40dp"
            android:layout_width="40dp"
            />

        <TextView
            android:id="@+id/tv_name"
            style="@style/content_text_style"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_black"
            android:lines="1"/>
    </LinearLayout>
</LinearLayout>
